{
    "name": "jussun-api",
    "version": "1.0.0",
    "description": "jussun-api",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon --delay 100ms src/index.ts",
        "start": "ts-node src/index.ts",
        "serve": "bun ./src/index.ts",
        "build": "tsc",
        "test:watch": "jest --watch",
        "update:prisma": "bun add --dev prisma@latest && bun add @prisma/client@latest",
        "db": "bun update:prisma && bun db:pull && bun db:generate",
        "db:pull": "bun prisma db pull",
        "db:generate": "bun prisma generate"
    },
    "prisma": {
        "schema": "./src/prisma/schema.prisma"
    },
    "keywords": [],
    "author": "",
    "overrides": {
        "cache-manager": "5.2.2"
    },
    "dependencies": {
        "@prisma/client": "^6.13.0",
        "axios": "^1.11.0",
        "bcrypt": "^6.0.0",
        "cls-hooked": "^4.2.2",
        "concurrently": "^9.2.0",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "express-rate-limit": "^8.0.1",
        "express-validator": "^7.2.1",
        "fs-extra": "^11.3.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "nodejs": "file:",
        "nodemon": "^3.1.10",
        "prom-client": "^15.1.3",
        "request-ip": "^3.3.0",
        "rotating-file-stream": "^3.2.6",
        "supertest": "^7.1.4",
        "swagger-autogen": "^2.23.7",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cls-hooked": "^4.3.9",
        "@types/cors": "^2.8.19",
        "@types/dotenv": "^8.2.3",
        "@types/express": "^5.0.3",
        "@types/fs-extra": "^11.0.4",
        "@types/http-status-codes": "^1.2.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.1.0",
        "@types/node-cron": "^3.0.11",
        "@types/readable-stream": "^4.0.21",
        "@types/request-ip": "^0.0.41",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "prisma": "^6.13.0"
    }
}