{
    "name": "jutsun-api",
    "version": "1.0.0",
    "description": "jutsun-api",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon --delay 800ms src/index.ts",
        "start": "ts-node src/index.ts",
        "serve": "pm2-runtime ./dist/index.js",
        "prod": "yarn git:pull && rm -rf .env && cp -rp .env.prod .env && yarn && yarn db && yarn build && pm2 restart jutsun-api && pm2 save && pm2 logs && git add . && git commit -m 'pull'",
        "git:pull": "git fetch --all && git merge --no-edit origin/master",
        "git:reset": "git reset --hard origin/master",
        "start:container": "chmod +x Makefile.sh && ./Makefile.sh",
        "prod:container": "yarn git:pull && cp -rp .env.dev .env && yarn start:container",
        "serve:container": "pm2-runtime start dist/index.js --name jutsun-api",
        "build": "tsc",
        "build:dev": "cp -rp .env.dev .env && tsc && yarn prod",
        "build:prod": "cp -rp .env.prod .env && tsc && yarn prod",
        "test:watch": "jest --watch",
        "db": "yarn db:pull && yarn db:generate",
        "db:pull": "yarn prisma db pull",
        "db:generate": "yarn prisma generate"
    },
    "prisma": {
        "schema": "./src/prisma/schema.prisma"
    },
    "keywords": [],
    "author": "",
    "overrides": {
        "cache-manager": "5.2.2"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "cls-hooked": "^4.2.2",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "express": "^4.21.1",
        "express-rate-limit": "^7.4.1",
        "express-validator": "^7.2.0",
        "fs-extra": "^11.2.0",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.11.4",
        "node-cron": "^3.0.3",
        "prom-client": "^15.1.3",
        "request-ip": "^3.3.0",
        "rotating-file-stream": "^3.2.5",
        "ts-node": "^10.9.2",
        "ua-parser-js": "^2.0.0",
        "uuid": "^11.0.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@prisma/client": "^5.22.0",
        "@types/cls-hooked": "^4.3.9",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.3",
        "@types/express": "^5.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.9.3",
        "@types/node-cron": "^3.0.11",
        "@types/request-ip": "^0.0.41",
        "@types/supertest": "^6.0.2",
        "@types/ua-parser-js": "^0.7.39",
        "@types/uuid": "^10.0.0",
        "nodemon": "^3.1.7",
        "prisma": "^5.22.0",
        "typescript": "^5.7.2",
        "winston-daily-rotate-file": "^5.0.0"
    }
}
